# ============================================
# Botspot Veo3 Backend Configuration
# ============================================
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env file with real credentials!

# ============================================
# Server Configuration
# ============================================
PORT=3000
NODE_ENV=development

# ============================================
# Google Veo 3 API
# ============================================
# Get your API key from: https://makersuite.google.com/app/apikey
# 1. Sign in with your Google account
# 2. Click "Create API Key"
# 3. Copy the key (starts with AIza...)
# 4. Paste it below
#
# SECURITY WARNING: This key provides access to your Google AI services
# - Never commit this to git
# - Never share publicly
# - Regenerate immediately if exposed
# - Set billing limits in Google Cloud Console
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# MongoDB Configuration
# ============================================
# Local MongoDB (for development)
MONGO_URI=mongodb://localhost:27017/botspot-veo3

# MongoDB Atlas (for production)
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/botspot-veo3?retryWrites=true&w=majority

# ============================================
# CORS Configuration
# ============================================
# Allow requests from specific origins (for production, set to your domain)
CORS_ORIGIN=*

# Production example:
# CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000        # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100        # Max requests per window per IP

# ============================================
# Optional: Veo3 Service Configuration
# ============================================
# Enable mock mode for testing without API calls (true/false)
# VEO3_MOCK=false

# Force fast/cheap model for all requests (true/false)
# VEO3_FORCE_FAST=false

# Maximum cost per video generation (in USD)
# VEO3_MAX_COST=5.00

# ============================================
# Google Cloud Storage (for frames & videos)
# ============================================
# Project ID from Google Cloud Console
GCS_PROJECT_ID=your-project-id-here

# Bucket name for storing video frames and exports
GCS_BUCKET_NAME=botspot-veo3

# Optional: Path to service account key JSON file
# If not provided, will use Application Default Credentials
# GCS_KEY_FILE=path/to/service-account-key.json

# ============================================
# Logging (optional)
# ============================================
# LOG_LEVEL=info
# LOG_FILE=logs/app.log
