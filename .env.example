OPENAI_API_KEY=your_openai_key_here
FAL_API_KEY=your_fal_key_here
ELEVENLABS_API_KEY=your_elevenlabs_key_here

# Optional: ElevenLabs tuning (defaults are demo-safe)
# Voice list helper (prints available voices + IDs): `python -c "from elevenlabs.client import ElevenLabs; from ott_ad_builder.config import config; c=ElevenLabs(api_key=config.ELEVENLABS_API_KEY); print([(v.name,v.voice_id) for v in c.voices.get_all().voices])"`
ELEVENLABS_VOICE_ID=onwK4e9ZLuTAKqWW03F9
# Optional: multi-voice dialogue (if set, the pipeline assigns primary voice to the first character and secondary to the second)
# ELEVENLABS_VOICE_ID_SECONDARY=
# Optional: narrator/VO override (used when speaker is "Narrator")
# ELEVENLABS_VOICE_ID_NARRATOR=
# Optional: explicit speaker->voice routing (overrides the auto primary/secondary mapping)
# Example: ELEVENLABS_VOICE_MAP=Maya=VOICE_ID,Grant=VOICE_ID,Narrator=VOICE_ID
# ELEVENLABS_VOICE_MAP=
# ELEVENLABS_MODEL=eleven_multilingual_v2
# ELEVENLABS_OUTPUT_FORMAT=mp3_44100_128  # Creator+ can use mp3_44100_192; code auto-falls back if not allowed
# ELEVENLABS_STABILITY=0.5
# ELEVENLABS_SIMILARITY_BOOST=0.8
# ELEVENLABS_STYLE=0.2
# ELEVENLABS_SPEED=1.0
# ELEVENLABS_SPEAKER_BOOST=true
# Optional: concurrency safety (prevents 429 on dialogue-heavy scripts)
# ELEVENLABS_MAX_CONCURRENCY=2

# Optional: mix knobs (Composer) - tune for demo speakers/headphones
# VO_VOLUME=1.0
# Optional: when a VO line is slightly too long for its slot, time-compress it instead of cutting words off.
# VO_ATEMPO_MAX=1.35
# SFX_VOLUME=0.75
# BGM_VOLUME=0.18
# Optional: BGM ducking under dialogue (default: on when BGM + VO exist)
# BGM_DUCKING=true
# BGM_DUCKING_THRESHOLD=0.08
# BGM_DUCKING_RATIO=8
# BGM_DUCKING_ATTACK=25
# BGM_DUCKING_RELEASE=250
# Optional: beat-sync editing (requires librosa; default off)
# ENABLE_BEAT_SYNC=false

# Google Vertex AI / Veo 3.1 auth (Application Default Credentials)
# Option A (recommended): set GOOGLE_APPLICATION_CREDENTIALS to a service-account JSON
# Option B: `gcloud auth application-default login`
GOOGLE_APPLICATION_CREDENTIALS=./service-account.json
GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# Optional: Veo stabilization (can reduce warping/drift in imageâ†’video)
# VEO_USE_LAST_FRAME=1
